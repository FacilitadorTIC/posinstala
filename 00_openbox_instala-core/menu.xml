			<item label="GParted" icon="/usr/share/icons/openbox-menu/disk.png">
				<action name="Execute">
					<command>
						gparted
					</command>
				</action>
			</item>
            <item label="Impresoras" icon="/usr/share/icons/openbox-menu/printer.png">
