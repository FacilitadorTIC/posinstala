            <item label="Wallpaper" icon="/usr/share/icons/openbox-menu/wallpaper.png">
                <action name="Execute">
                    <command>
                        nitrogen
                    </command>
                </action>
            </item>
            <item label="Notificaciones" icon="/usr/share/icons/openbox-menu/notification.png">
